<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/face_check_common_bg_color"
    android:orientation="vertical">

    <com.pasc.lib.userbase.base.view.CommonTitleView
        android:id="@+id/user_ctv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_ffffff"
        app:leftIconVisibility="false"
        app:title="@string/face_cert_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1.0"
        android:background="@color/gray_e0e0e0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_ffffff"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/user_activity_certifySucc_ivIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_41"
            android:src="@drawable/cert_ic_certify_succ" />

        <TextView
            android:id="@+id/user_activity_certifySucc_tvCertifySucc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_activity_certifySucc_ivIcon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_12"
            android:text="认证成功"
            android:textColor="@color/black_000000"
            android:textSize="@dimen/text_size_18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_activity_certifySucc_tvContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_activity_certifySucc_tvCertifySucc"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_12"
            android:maxWidth="@dimen/dp_180"
            android:text="认证成功"
            android:textColor="@color/gray_999999"
            android:textSize="@dimen/text_size_15" />
    </RelativeLayout>

    <Button
        android:id="@+id/user_activity_certifySucc_btnReturn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/userbase_button_bg"
        android:gravity="center"
        android:text="返回"
        android:textColor="@color/white_ffffff"
        android:textSize="@dimen/text_size_17" />


</LinearLayout>