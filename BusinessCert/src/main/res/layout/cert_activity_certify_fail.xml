<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg"
    android:orientation="vertical">

    <com.pasc.lib.userbase.base.view.CommonTitleView
        android:id="@+id/user_ctv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_ffffff"
        app:leftIconVisibility="false"
        app:title="@string/user_bank_cert" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1.0"
        android:background="@color/gray_e0e0e0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_ffffff"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/user_activity_certifyFail_ivIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_41"
            android:src="@drawable/cert_ic_certify_fail" />

        <TextView
            android:id="@+id/user_activity_certifyFail_tvCertifyFail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_activity_certifyFail_ivIcon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_12"
            android:text="认证失败"
            android:textColor="@color/red_ff4d4f"
            android:textSize="@dimen/text_size_18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_activity_certifyFail_tvErrorMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_activity_certifyFail_tvCertifyFail"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_12"
            android:gravity="center_horizontal"
            android:text="认证失败"
            android:textColor="@color/gray_999999"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/user_activity_certifyFail_tvAuthCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_activity_certifyFail_tvErrorMsg"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="center_horizontal"
            android:text="剩余次数"
            android:textColor="@color/gray_999999"
            android:textSize="@dimen/text_size_15" />
    </RelativeLayout>

    <TextView
        android:id="@+id/user_activity_certifyFail_tvRetry"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/userbase_button_bg"
        android:gravity="center"
        android:text="@string/user_retry"
        android:textColor="@color/white_ffffff"
        android:textSize="@dimen/text_size_17" />

    <TextView
        android:id="@+id/user_activity_certifyFail_tvReturn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="@string/user_certify_failed_back"
        android:textColor="@color/pasc_primary"
        android:textSize="@dimen/text_size_17" />

</LinearLayout>