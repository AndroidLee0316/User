<?xml version="1.0" encoding="utf-8"?>
<com.flyco.roundview.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/userbase_bg_round_dialog"
    android:orientation="vertical"
    android:paddingTop="20dp"
    app:rv_backgroundColor="@color/user_white_fcfcfc"
    app:rv_cornerRadius="12dp">

    <TextView
        android:id="@+id/temp_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/black_030303"
        android:textSize="@dimen/text_size_17"
        android:visibility="gone" />

    <TextView
        android:id="@+id/temp_tv_context"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="您暂未申请深圳通鹏淘电子\n卡,可点击“我要申请”快速办理。"
        android:textColor="@color/black_2E332F"
        android:textSize="@dimen/text_size_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="20dp"
        android:background="@color/gray_dddddd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/temp_tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/userbase_selector_button_common"
            android:gravity="center"
            android:text="@string/user_cancel"
            android:textColor="@color/gray_8d8d8d"
            android:textSize="@dimen/text_size_17" />

        <View
            android:id="@+id/temp_view"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/gray_dddddd" />

        <TextView
            android:id="@+id/temp_tv_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/userbase_selector_button_common"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/pasc_clickable"
            android:textSize="@dimen/text_size_17" />
    </LinearLayout>

</com.flyco.roundview.RoundLinearLayout>