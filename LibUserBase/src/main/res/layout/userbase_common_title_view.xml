<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_title_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
    android:id="@+id/top_view"
    android:layout_width="match_parent"
    android:layout_height="0dp" />

    <RelativeLayout
        android:id="@+id/rl_first"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_bar_height">


        <TextView
            android:id="@+id/temp_common_title_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7.5dp"
            android:drawablePadding="10dp"
            android:maxLines="1"
            android:textColor="@color/white_ffffff"
            android:textSize="@dimen/text_size_15"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_title_left"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/common_title_bar_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/userbase_selector_button_common"
            android:paddingLeft="16dp"
            android:paddingRight="25dp"
            android:src="@mipmap/userbase_ic_back"
            android:visibility="gone" />

        <TextView
            android:id="@+id/temp_common_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="10dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="12"
            android:maxWidth="@dimen/dp_160"
            android:minEms="8"
            android:singleLine="true"
            android:textColor="@color/black_333333"
            android:textSize="18sp"
            tools:text="" />

        <ProgressBar
            android:id="@+id/temp_progress_bar"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/common_title_right_layout"
            android:indeterminateTint="@color/white_ffffff"
            android:indeterminateTintMode="src_atop"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/common_title_right_layout"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/temp_iv_title_right_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/common_title_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textColor="@color/white_ffffff"
                android:textSize="@dimen/text_size_15"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/temp_iv_title_Right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dip"
                android:padding="10dp"
                android:visibility="gone" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/temp_view_under_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_e0e0e0"
        android:visibility="visible"/>
</LinearLayout>