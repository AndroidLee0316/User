<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/userbase_bg_round_dialog"
    android:orientation="vertical">

    <TextView
        android:id="@+id/user_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/text_size_18" />

    <TextView
        android:id="@+id/user_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dp_15"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/text_size_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:layout_marginTop="10dp"
        android:background="@color/gray_e0e0e0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/userbase_selector_button_common"
            android:gravity="center"
            android:text="@string/user_cancel"
            android:textColor="@color/black_666666"
            android:textSize="@dimen/text_size_17" />

        <View
            android:id="@+id/user_view"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/gray_e0e0e0" />

        <TextView
            android:id="@+id/user_tv_sms_login"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/userbase_selector_button_common"
            android:gravity="center"
            android:text="@string/user_sms_login"
            android:textColor="@color/pasc_primary"
            android:textSize="@dimen/text_size_17" />
    </LinearLayout>

</LinearLayout>
