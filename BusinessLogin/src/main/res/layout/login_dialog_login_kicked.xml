<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_public_bg"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/text_size_17"
        android:textStyle="bold"
        tools:text="下线通知" />
    <TextView
        android:id="@+id/user_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/text_size_15"
        tools:text="该账号已在其他设备登录\n请重新登录" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:layout_marginTop="10dp"
        android:background="@color/gray_e0e0e0" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_tv_modify_pwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/userbase_selector_button_common"
            android:gravity="center"
            android:text="我知道了"
            android:textColor="@color/pasc_primary"
            android:textSize="@dimen/text_size_17" />
    </LinearLayout>

</LinearLayout>
